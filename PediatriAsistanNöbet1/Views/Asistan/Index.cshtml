@{
    ViewBag.Title = "Asistan Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4>Asistan Listesi</h4>
        <button class="btn btn-primary" onclick="ModalAc()"><i class="bi bi-person-plus"></i> Yeni Asistan</button>
    </div>
    <div class="card-body">
        <table class="table table-hover" id="tblAsistan">
            <thead>
                <tr>
                    <th>Ad Soyad</th>
                    <th>Telefon</th>
                    <th>Email</th>
                    <th>Adres</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modalForm" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Asistan Bilgileri</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="frmAsistan">
                    <input type="hidden" id="AsistanID" name="AsistanID" value="0" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>Ad</label>
                            <input type="text" class="form-control" name="Ad" id="Ad" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Soyad</label>
                            <input type="text" class="form-control" name="Soyad" id="Soyad" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label>Telefon</label>
                        <input type="text" class="form-control" name="Telefon" id="Telefon" />
                    </div>
                    <div class="mb-3">
                        <label>Email</label>
                        <input type="email" class="form-control" name="Email" id="Email" />
                    </div>
                    <div class="mb-3">
                        <label>Adres</label>
                        <textarea class="form-control" name="Adres" id="Adres" rows="2"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" onclick="Kaydet()">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () { VerileriGetir(); });

    function VerileriGetir() {
        $.ajax({
            url: '/Asistan/GetAsistanlar', type: 'GET', dataType: 'json',
            success: function (data) {
                var html = '';
                $.each(data, function (i, item) {
                    html += `<tr>
                        <td>${item.Ad} ${item.Soyad}</td>
                        <td>${item.Telefon || '-'}</td>
                        <td>${item.Email || '-'}</td>
                        <td>${item.Adres || '-'}</td>
                        <td>
                            <button class="btn btn-sm btn-warning" onclick="Duzenle(${item.AsistanID})">Düzenle</button>
                            <button class="btn btn-sm btn-danger" onclick="Sil(${item.AsistanID})">Sil</button>
                        </td>
                    </tr>`;
                });
                $('#tblAsistan tbody').html(html);
            }
        });
    }

    function ModalAc() {
        $('#frmAsistan')[0].reset();
        $('#AsistanID').val(0);
        $('#modalForm').modal('show');
    }

    function Kaydet() {
        $.post('/Asistan/Kaydet', $('#frmAsistan').serialize(), function (res) {
            if (res.success) { $('#modalForm').modal('hide'); VerileriGetir(); }
            else { alert(res.message); }
        });
    }

    function Duzenle(id) {
        $.get('/Asistan/GetById/' + id, function (res) {
            $('#AsistanID').val(res.AsistanID);
            $('#Ad').val(res.Ad);
            $('#Soyad').val(res.Soyad);
            $('#Telefon').val(res.Telefon);
            $('#Email').val(res.Email);
            $('#Adres').val(res.Adres);
            $('#modalForm').modal('show');
        });
    }

    function Sil(id) {
        if (confirm('Silinecek, emin misiniz?')) {
            $.post('/Asistan/Sil/' + id, function () { VerileriGetir(); });
        }
    }
</script>