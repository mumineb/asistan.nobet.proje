@{
    ViewBag.Title = "Nöbet Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4>Nöbet Listesi</h4>
        <button class="btn btn-primary" onclick="ModalAc()"><i class="bi bi-calendar-plus"></i> Yeni Nöbet Yaz</button>
    </div>
    <div class="card-body">
        <table class="table table-hover" id="tblNobet">
            <thead>
                <tr>
                    <th>Tarih</th>
                    <th>Asistan</th>
                    <th>Bölüm</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modalForm" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nöbet İşlemleri</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="frmNobet">
                    <input type="hidden" id="NobetID" name="NobetID" value="0" />

                    <div class="mb-3">
                        <label>Tarih</label>
                        <input type="date" class="form-control" name="NobetTarihi" id="NobetTarihi" required />
                    </div>

                    <div class="mb-3">
                        <label>Asistan</label>
                        <select class="form-control" name="AsistanID" id="AsistanID" required></select>
                    </div>

                    <div class="mb-3">
                        <label>Bölüm</label>
                        <select class="form-control" name="BolumID" id="BolumID" required></select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" onclick="Kaydet()">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        DropdownlariDoldur();
        VerileriGetir();
    });

    function DropdownlariDoldur() {
        $.get('/Nobets/GetVeriler', function (res) {
            var optAsistan = '<option value="">Asistan Seçiniz...</option>';
            $.each(res.asistanlar, function (i, item) {
                optAsistan += `<option value="${item.AsistanID}">${item.AdSoyad}</option>`;
            });
            $('#AsistanID').html(optAsistan);

            var optBolum = '<option value="">Bölüm Seçiniz...</option>';
            $.each(res.bolumler, function (i, item) {
                optBolum += `<option value="${item.BolumID}">${item.BolumAdi}</option>`;
            });
            $('#BolumID').html(optBolum);
        });
    }

    function VerileriGetir() {
        $.get('/Nobets/GetNobetler', function (data) {
            var html = '';
            $.each(data, function (i, item) {
                html += `<tr>
                    <td>${item.Tarih}</td>
                    <td>${item.AsistanAd}</td>
                    <td>${item.BolumAd}</td>
                    <td>
                        <button class="btn btn-sm btn-warning" onclick="Duzenle(${item.NobetID})">Düzenle</button>
                        <button class="btn btn-sm btn-danger" onclick="Sil(${item.NobetID})">Sil</button>
                    </td>
                </tr>`;
            });
            $('#tblNobet tbody').html(html);
        });
    }

    function ModalAc() {
        $('#frmNobet')[0].reset();
        $('#NobetID').val(0);
        $('#modalForm').modal('show');
    }

    function Kaydet() {
        $.post('/Nobets/Kaydet', $('#frmNobet').serialize(), function (res) {
            if (res.success) { $('#modalForm').modal('hide'); VerileriGetir(); }
            else { alert(res.message); }
        });
    }

    function Duzenle(id) {
        $.get('/Nobets/GetById/' + id, function (res) {
            $('#NobetID').val(res.NobetID);
            $('#NobetTarihi').val(res.Tarih);
            $('#AsistanID').val(res.AsistanID);
            $('#BolumID').val(res.BolumID);
            $('#modalForm').modal('show');
        });
    }

    function Sil(id) {
        if (confirm('Silmek istediğinize emin misiniz?')) {
            $.post('/Nobets/Sil/' + id, function () { VerileriGetir(); });
        }
    }
</script>