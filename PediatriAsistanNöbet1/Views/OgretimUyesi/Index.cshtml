@{
    ViewBag.Title = "Öğretim Üyesi Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4>Öğretim Üyesi Listesi</h4>
        <button class="btn btn-primary" onclick="ModalAc()"><i class="bi bi-person-plus-fill"></i> Yeni Hoca Ekle</button>
    </div>
    <div class="card-body">
        <table class="table table-hover" id="tblHoca">
            <thead>
                <tr>
                    <th>Ad Soyad</th>
                    <th>Bölüm</th>
                    <th>Telefon</th>
                    <th>Email</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modalForm" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Öğretim Üyesi Bilgileri</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="frmHoca">
                    <input type="hidden" id="OgretimUyesiID" name="OgretimUyesiID" value="0" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label>Ad</label>
                            <input type="text" class="form-control" name="Ad" id="Ad" required />
                        </div>
                        <div class="col-md-6">
                            <label>Soyad</label>
                            <input type="text" class="form-control" name="Soyad" id="Soyad" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label>Bölüm</label>
                        <select class="form-control" name="BolumID" id="BolumID" required>
                            <option value="">Bölüm Seçiniz...</option>
                        </select>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label>Telefon</label>
                            <input type="text" class="form-control" name="Telefon" id="Telefon" />
                        </div>
                        <div class="col-md-6">
                            <label>Email</label>
                            <input type="email" class="form-control" name="Email" id="Email" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label>Adres</label>
                        <textarea class="form-control" name="Adres" id="Adres" rows="2"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" onclick="Kaydet()">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        BolumleriGetir(); 
        VerileriGetir();  
    });


    function BolumleriGetir() {
        $.ajax({
            url: '/OgretimUyesi/GetBolumListesi',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                var options = '<option value="">Bölüm Seçiniz...</option>';
                $.each(data, function (i, item) {
                    options += '<option value="' + item.BolumID + '">' + item.BolumAdi + '</option>';
                });
                $('#BolumID').html(options);
            }
        });
    }

    // 2. ADIM: Tabloyu Listeleme
    function VerileriGetir() {
        $.ajax({
            url: '/OgretimUyesi/GetOgretimUyeleri',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                var html = '';
                $.each(data, function (i, item) {
                    html += `<tr>
                        <td>${item.Ad} ${item.Soyad}</td>
                        <td><span class="badge bg-info text-dark">${item.BolumAdi}</span></td>
                        <td>${item.Telefon || '-'}</td>
                        <td>${item.Email || '-'}</td>
                        <td>
                            <button class="btn btn-sm btn-warning" onclick="Duzenle(${item.OgretimUyesiID})">Düzenle</button>
                            <button class="btn btn-sm btn-danger" onclick="Sil(${item.OgretimUyesiID})">Sil</button>
                        </td>
                    </tr>`;
                });
                $('#tblHoca tbody').html(html);
            }
        });
    }

    function ModalAc() {
        $('#frmHoca')[0].reset();
        $('#OgretimUyesiID').val(0);
        $('#modalForm').modal('show');
    }

    function Kaydet() {
        $.post('/OgretimUyesi/Kaydet', $('#frmHoca').serialize(), function (res) {
            if (res.success) {
                $('#modalForm').modal('hide');
                VerileriGetir();
            } else {
                alert(res.message);
            }
        });
    }

    function Duzenle(id) {
        $.get('/OgretimUyesi/GetById/' + id, function (res) {
            $('#OgretimUyesiID').val(res.OgretimUyesiID);
            $('#Ad').val(res.Ad);
            $('#Soyad').val(res.Soyad);
            $('#BolumID').val(res.BolumID); 
            $('#Telefon').val(res.Telefon);
            $('#Email').val(res.Email);
            $('#Adres').val(res.Adres);
            $('#modalForm').modal('show');
        });
    }

    function Sil(id) {
        if (confirm("Silmek istediğinize emin misiniz?")) {
            $.post('/OgretimUyesi/Sil/' + id, function (res) {
                VerileriGetir();
            });
        }
    }
</script>