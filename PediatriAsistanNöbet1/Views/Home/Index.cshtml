@{
    ViewBag.Title = "Bölüm Panosu";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";

    var nobetler = ViewBag.BugununNobetleri as List<PediatriAsistanNöbet1.Models.Model.Nobet>;
    var duyurular = ViewBag.Duyurular as List<PediatriAsistanNöbet1.Models.Model.AcilDurum>;
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-4">
        <div>
            <h3 class="mb-0 text-dark">Pediatri Bölümü Asistan Panosu</h3>
            <span class="text-muted small">Günlük Operasyon Ekranı</span>
        </div>
        <div class="text-end">
            <h5 class="mb-0 text-primary">@DateTime.Now.ToString("dd MMMM yyyy, dddd")</h5>
            <small class="text-secondary">Sistem Saati: @DateTime.Now.ToString("HH:mm")</small>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">

            <div class="card mb-4 shadow-sm" style="border-radius: 0; border-top: 3px solid #0d6efd;">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0"><i class="bi bi-list-task me-2"></i>Bugünün Nöbetçi Listesi</h5>
                </div>
                <div class="card-body p-0">
                    @if (nobetler != null && nobetler.Any())
                    {
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col" style="width: 40%;">Bölüm / Servis</th>
                                    <th scope="col" style="width: 35%;">Sorumlu Asistan</th>
                                    <th scope="col" style="width: 25%;">İletişim</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in nobetler)
                                {
                                    <tr>
                                        <td class="fw-bold text-primary">@item.Bolum.BolumAdi</td>
                                        <td>
                                            Dr. @item.Asistan.Ad @item.Asistan.Soyad
                                        </td>
                                        <td>
                                            <a href="tel:@item.Asistan.Telefon" class="btn btn-sm btn-outline-secondary py-0" style="font-size: 0.85rem;">
                                                <i class="bi bi-telephone-fill"></i> Ara
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-calendar-x display-6 d-block mb-2"></i>
                            Bugün için sisteme girilmiş nöbet kaydı bulunmamaktadır.
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm" style="border-radius: 0;">
                <div class="card-header bg-danger text-white py-2">
                    <h6 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Bölüm İçi Önemli Duyurular</h6>
                </div>
                <div class="card-body">
                    @if (duyurular != null && duyurular.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var duyuru in duyurular)
                            {
                                <div class="list-group-item px-0 py-3">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1 fw-bold text-dark">@duyuru.Baslik</h6>
                                        <small class="text-muted">@duyuru.Tarih.ToString("dd.MM.yyyy")</small>
                                    </div>
                                    <p class="mb-1 text-secondary small">@duyuru.Icerik</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Aktif bir duyuru bulunmamaktadır.</p>
                    }
                </div>
            </div>

        </div>

        <div class="col-md-4">

            <div class="card mb-3 shadow-sm bg-light border-0">
                <div class="card-body">
                    @if (Session["kullaniciID"] != null)
                    {
                        <h6 class="text-muted">Hoşgeldiniz,</h6>
                        <h5>Yönetici</h5>
                        <hr />
                        <a href="/Admin/Index" class="btn btn-primary w-100 mb-2">Yönetim Paneli</a>
                        <a href="/Admin/Logout" class="btn btn-outline-danger w-100">Çıkış Yap</a>
                    }
                    else
                    {
                        <h6 class="card-title">Personel Girişi</h6>
                        <p class="card-text small text-muted">Nöbet değişimi ve randevu işlemleri için giriş yapınız.</p>
                        <a href="/Admin/Login" class="btn btn-outline-primary w-100">Giriş Yap</a>
                    }
                </div>
            </div>

            <div class="list-group shadow-sm mb-4">
                <a href="/Home/Nobet" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div><i class="bi bi-calendar3 me-2 text-primary"></i> Aylık Nöbet Takvimi</div>
                    <i class="bi bi-chevron-right small"></i>
                </a>
                <a href="/Home/OgretimUyesi" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div><i class="bi bi-person-badge me-2 text-success"></i> Öğretim Üyeleri</div>
                    <i class="bi bi-chevron-right small"></i>
                </a>
                <a href="/Home/Randevu" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div><i class="bi bi-journal-plus me-2 text-danger"></i> Randevu Al</div>
                    <i class="bi bi-chevron-right small"></i>
                </a>
                <a href="/Home/Bolum" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div><i class="bi bi-hospital me-2 text-info"></i> Bölüm Bilgileri</div>
                    <i class="bi bi-chevron-right small"></i>
                </a>
            </div>

            <div class="card border-0">
                <div class="card-body bg-light rounded">
                    <h6 class="text-muted small">SORUN BİLDİRİMİ</h6>
                    <p class="small mb-2">Nöbetlerde bir hata olduğunu düşünüyorsanız sekreterlik ile iletişime geçiniz.</p>
                    <span class="d-block fw-bold"><i class="bi bi-telephone me-1"></i> Dahili: 1234</span>
                </div>
            </div>

        </div>
    </div>
</div>