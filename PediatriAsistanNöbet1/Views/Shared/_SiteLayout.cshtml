<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pediatri Nöbet Sistemi</title>

    <link href="~/Content/SiteLayout/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/SiteLayout/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/SiteLayout/assets/css/style.css" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Open Sans', sans-serif;
        }

        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.08);
            background: #fff;
        }

        .nav-link {
            font-weight: 500;
            color: #444 !important;
        }

            .nav-link:hover {
                color: #0d6efd !important;
            }

            .nav-link.active {
                color: #0d6efd !important;
                font-weight: 600;
            }

        .footer {
            background: #fff;
            border-top: 1px solid #e9ecef;
            padding: 20px 0;
            margin-top: 50px;
            font-size: 0.9rem;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <header id="header" class="fixed-top_ iptal-et sticky-top">
        <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="/Home/Index">
                    <span class="h4 mb-0 text-primary fw-bold">Pediatri</span>
                    <span class="h4 mb-0 text-dark fw-light ms-1">Nöbet</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Nobet">Nöbet Takvimi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Asistan">Asistanlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/OgretimUyesi">Öğretim Üyeleri</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Bolum">Bölümler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Randevu">Randevu Al</a>
                        </li>
                    </ul>

                    <div class="d-flex ms-lg-3">
                        @if (Session["kullaniciID"] != null)
                        {
                            <a href="/Admin/Index" class="btn btn-primary btn-sm rounded-pill px-3">Yönetim Paneli</a>
                        }
                        else
                        {
                            <a href="/Admin/Login" class="btn btn-outline-primary btn-sm rounded-pill px-3">Personel Girişi</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <footer class="footer text-muted">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    &copy; @DateTime.Now.Year <strong>Pediatri Ana Bilim Dalı</strong>. Tüm hakları saklıdır.
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <small>Asistan Nöbet Yönetim Sistemi v1.0</small>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/Content/SiteLayout/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/SiteLayout/assets/js/main.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>