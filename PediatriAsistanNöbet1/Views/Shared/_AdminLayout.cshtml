<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewBag.Title - Pediatri Admin</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <link href="~/Content/AdminLayout/assets/img/favicon.png" rel="icon">
    <link href="~/Content/AdminLayout/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <link href="~/Content/AdminLayout/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/AdminLayout/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/AdminLayout/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/AdminLayout/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/Content/AdminLayout/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/Content/AdminLayout/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/Content/AdminLayout/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <link href="~/Content/AdminLayout/assets/css/style.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>

<body>

    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="/Admin/Index" class="logo d-flex align-items-center">
                <img src="~/Content/AdminLayout/assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">PediatriPanel</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="~/Content/AdminLayout/assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
                        <span class="d-none d-md-block dropdown-toggle ps-2">Admin</span>
                    </a><ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>@Session["eposta"]</h6>
                            <span>Sistem Yöneticisi</span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="/Admin/Logout">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Güvenli Çıkış</span>
                            </a>
                        </li>

                    </ul>
                </li>
            </ul>
        </nav>
    </header><aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Admin/Index">
                    <i class="bi bi-grid"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <li class="nav-heading">Nöbet İşlemleri</li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Nobets/Index">
                    <i class="bi bi-calendar-date"></i>
                    <span>Nöbet Listesi & Atama</span>
                </a>
            </li>

            <li class="nav-heading">Randevu & Hoca</li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Musaitlik/Index">
                    <i class="bi bi-clock-history"></i>
                    <span>Müsaitlik (Hoca Saati)</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Randevu/Index">
                    <i class="bi bi-journal-check"></i>
                    <span>Randevu Talepleri</span>
                </a>
            </li>

            <li class="nav-heading">Kurumsal</li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/AcilDurum/Index">
                    <i class="bi bi-megaphone"></i>
                    <span>Acil Durum / Duyuru</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Bolum/Index">
                    <i class="bi bi-hospital"></i>
                    <span>Bölümler</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Asistan/Index">
                    <i class="bi bi-people"></i>
                    <span>Asistanlar</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/OgretimUyesi/Index">
                    <i class="bi bi-person-badge"></i>
                    <span>Öğretim Üyeleri</span>
                </a>
            </li>

        </ul>

    </aside><main id="main" class="main">

        @RenderBody()

    </main><footer id="footer" class="footer">
        <div class="copyright">
            &copy; Copyright <strong><span>Pediatri Yönetim</span></strong>. Tüm Hakları Saklıdır.
        </div>
    </footer><a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <script src="~/Content/AdminLayout/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/Content/AdminLayout/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/AdminLayout/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="~/Content/AdminLayout/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/Content/AdminLayout/assets/vendor/quill/quill.js"></script>
    <script src="~/Content/AdminLayout/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/Content/AdminLayout/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/Content/AdminLayout/assets/vendor/php-email-form/validate.js"></script>

    <script src="~/Content/AdminLayout/assets/js/main.js"></script>

</body>

</html>